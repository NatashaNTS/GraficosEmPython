import matplotlib.pyplot as plt
import numpy as np

# Dados de temperatura (em graus Celsius) para cada mês do ano
temperaturas = [2, 4, 8, 12, 16, 20, 22, 20, 18, 14, 10, 6]

# Meses do ano
meses = ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro']

# Criar o diagrama de linha
plt.plot(meses, temperaturas, marker='o', linestyle='-', color='orange', label='Temperatura')

# Adicionar pontos de marcação nos meses
plt.xticks(range(12), meses, rotation=45)

# Adicionar título e legendas
plt.title('Variação de Temperatura ao Longo do Ano')
plt.xlabel('Mês')
plt.ylabel('Temperatura (°C)')

# Mostrar a legenda
plt.legend()

# Mostrar o diagrama
plt.show()
